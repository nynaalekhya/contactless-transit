    <input type="password" name="password"  placeholder="password"/>
    <select name="role"><option value="conductor">conductor</option><option value="passenger">passenger</option></select>
    <input type="text"  name="phone"  placeholder="phone number with extension"/>
    <input type="submit" value="Register">
    </form>
